{
  "compilerOptions": {
    "rootDirs": [
      "src"
    ],
    "outDir": "./dist",
    "target": "es2019", 
    "module": "commonjs", 
    "baseUrl": "./src",
    "esModuleInterop": true, 
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": [
    "src"
  ]
}